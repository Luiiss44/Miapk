<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/layoutDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen del usuario -->
        <ImageView
            android:id="@+id/imageViewDetail"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen del usuario" />

        <!-- Cada TextView muestra un campo -->
        <TextView
            android:id="@+id/textViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewMaidenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de soltera:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Género:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewBirthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de nacimiento:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewBloodGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupo sanguíneo:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewEyeColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color de ojos:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewHair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabello:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewCoordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coordenadas:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewPostalCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código postal:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="País:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewUniversity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Universidad:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banco:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresa:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewEin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EIN:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewSsn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSN:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewUserAgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Agent:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewCrypto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crypto:"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role:"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>


